<ul>
  <% @article.errors.full_messages.each do |error| %>
    <li><%= error %></li>
  <% end %>
</ul>

<%= form_for(@article) do |a| %>
  <%= a.label :title %>
  <%= a.text_field :title %>
  <%= a.label :body %>
  <%= a.text_area :body %>
  <%= a.submit %>
  <p>
  <%= a.label :tag_list %><br />
  <%= a.text_field :tag_list %>
  </p>
<% end %>
